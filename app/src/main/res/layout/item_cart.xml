<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="35dp"
        android:paddingVertical="15dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu Item Name"
                android:textSize="18sp"
                android:textColor="#333333"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginTop="8dp">

                <!-- Ikon Kalori -->
                <ImageView
                    android:id="@+id/foodCalorieIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_fire" />

                <!-- Jumlah Kalori -->
                <TextView
                    android:id="@+id/tvCartItemCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 kcal"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRemove"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#FFC700"
                app:cornerRadius="5dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_remove"
                android:text="Remove"/>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvCartItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginHorizontal="8dp"/>

            <Button
                android:id="@+id/btnAdd"
                android:padding="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#FFC700"
                android:drawableEnd="@drawable/ic_add_black"
                android:layout_gravity="center"
                app:cornerRadius="5dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>